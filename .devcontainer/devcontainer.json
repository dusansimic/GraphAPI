{
	"name": "Java",
	"image": "mcr.microsoft.com/devcontainers/java:1-21-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "none",
			"installMaven": "false",
			"installGradle": "true"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.java",
				"vscjava.vscode-java-debug",
				"VisualStudioExptTeam.vscodeintellicode",
				"GitHub.copilot"
			],
			"settings": {
				"java.compile.nullAnalysis.mode": "automatic"
			}
		}
	}
}